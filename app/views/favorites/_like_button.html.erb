         <div class="mt-2">
          <% if current_user.liking?(micropost) %>
           <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :like_id, micropost.id %>
            <%= f.submit "Unfavorite", class: 'btn btn-danger btn-sm' %>
           <% end %>
          <% else %>
           <%= form_with(model: current_user.favorites.build, local: true, method: :post) do |f| %>
            <%= hidden_field_tag :like_id, micropost.id %>
            <%= f.submit "Favorite", class: 'btn btn-success btn-sm' %>
           <% end %>
          <% end %>
         </div>